<%# employer %>
<% if current_user.employer? %>
  <h1>Welcome Employer</h1>
   <% @jobs.each do |job| %>

     <p> <%=link_to job.company, job %> </p>
  <% end %>

  
<%# applicant %>
<% else current_user.applicant? %>
  <h1>Welcome applicant</h1>
  <h3>check job post</h3>

  <% @jobs.each do |job| %>
     <p><%= link_to job.title, job %><p>
  <% end %>

<br><h3><%= link_to "All the Applicant Apply By Jobs"%></h3>

<% end%>
